{
  "name": "app-fe",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "scripts": "ts-node --project ./tools/scripts/tsconfig.json -r ./tools/scripts/node_modules/tsconfig-paths/register ./tools/scripts",
    "new": "pnpm scripts create",
    "prebuild": "pnpm build:packages && pnpm build:tools",
    "start:manage": "pnpm --filter './production/manage' start",
    "start:console": "pnpm start:console-remote && pnpm start:console-prod",
    "start:console-prod": "pnpm --filter './production/console' start",
    "start:console-remote": "pnpm --filter './remotes/console/**' start",
    "stop:console": "pnpm stop:console-prod && pnpm stop:console-remote",
    "stop:console-prod": "pnpm --filter './production/console' stop",
    "stop:console-remote": "pnpm --filter './remotes/console/**' stop",
    "preview:console-prod": "pnpm --filter './production/console' preview",
    "preview:console-remote": "pnpm --filter './remotes/console/**' preview",
    "build:console": "pnpm build:packages && pnpm build:console-prod",
    "build:console-prod": "pnpm --filter './production/**' build",
    "build:packages": "pnpm --filter './packages/**' clean && pnpm --filter './packages/**' build",
    "build:tools": "pnpm --filter './tools/**' clean && pnpm --filter './tools/**' build",
    "format": "pnpm format:prettier && pnpm format:eslint",
    "format:prettier": "prettier --write --list-different --cache \"**/*.{ts,tsx,less,json,yml,yaml,md}\"",
    "format:eslint": "eslint --ext .ts,.tsx --cache --quiet --fix ./",
    "commit": "git-cz"
  },
  "keywords": [],
  "author": "xiaoYown",
  "devDependencies": {
    "@changesets/cli": "^2.26.0",
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@commitlint/cz-commitlint": "^17.4.4",
    "@typescript-eslint/eslint-plugin": "5.40.0",
    "@typescript-eslint/parser": "5.40.0",
    "commitizen": "^4.2.4",
    "eslint": "8.25.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-react": "7.31.10",
    "eslint-plugin-react-hooks": "4.6.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "prettier": "2.7.1",
    "typescript": "4.9.3"
  },
  "gitHooks": {
    "pre-commit": "lint-staged --diff"
  },
  "lint-staged": {
    "**/*.ts?(x)": [
      "npm run format",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  }
}
